#!/bin/bash

# read text file from startline till endline, wait $3 seconds, then print next line

# $1: start line
# $2: end line
# $3: pause time
# $4: path/to/some/file

for (( i=$1 ; i<=$2 ; i++ )); do
    line=$(awk 'NR=='$i'{ print}' $(readlink -f "$4"))      # store line i from file $4 (readlink -f gets absolute path) in $line
    typeit_like_handwriting $line                           # typeit function types every char of $line slowly
    sleep $3
    echo -e "\n"
done