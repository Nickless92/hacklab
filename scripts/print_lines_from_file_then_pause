#!/bin/bash
# read text file line by line, wait $3 seconds, then print it 

cd $(dirname "$0")
for (( i=$1 ; i<=$2 ; i++ )); do                            # first argument for loop start second for loop end and third for selection of new lines
    line=$(awk 'NR=='$i'{ print}' $(readlink -f "$4"))      # store line i from file in $line
    ./typeit_like_handwriting $line                           # through typit function type every char of var slowly
    sleep $3
    echo -e "\n"
done
cd - > /dev/null