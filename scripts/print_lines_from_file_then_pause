#!/bin/bash
for (( i=$1 ; i<=$2 ; i++ )); do                        # first argument for loop start second for loop end and third for selection of new lines
    line=$(awk 'NR=='$i'{ print}' "$4")                 # store line i from file in $line
    typeit $line                                        # through typit function type every char of var slowly
    sleep $3
    echo -e "\n"
    #if [ $3 == 0 ];   then sleep .$(( RANDOM%3 )); echo -e "---\n"     
    #elif [ $3 == 1 ]; then sleep .$(( RANDOM%3 )); echo -e "\n---\n"
    #elif [ $3 == 2 ]; then sleep .$(( RANDOM%3 )); echo -e "\n"; fi
done