#!/bin/bash

echo -n "Do you want to upload your points? [Y/N]: "

#./scripts/authentication ;

read -n 1 userInput
case $userInput in
    Y|y)
        . ./scripts/authentication ;
        echo "$1;$infName;$(date +%c);Level $2 -- Punkte = $points" | gpg -e --always-trust -a -r 590659F58937BD0A763D1DCDD07DBD27DEB068CF > localDatabase.txt.asc;
        pushDatabaseToServer;
        echo -e "\n";;
    N|n) echo -e "\n" ;;
    *) echo -e "\nWrong option\n" ; 
       ./scripts/upload;;
esac
