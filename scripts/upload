#!/bin/bash

echo -n "Do you want to upload your points? [Y|n]: "
read -n 1 userInput
case $userInput in
    Y|y)
        importGpgKey && \
        . authentication && \
        echo "$1;$email;$(date +%c);Level $2;$points" \
        | gpg -e --always-trust -a -r 590659F58937BD0A763D1DCDD07DBD27DEB068CF > localDatabase.txt.gpg && \
        pushDatabaseToServer ;;
    N|n) continue ;;
    *) echo -e "\nWrong option\n" ; upload;;
esac
